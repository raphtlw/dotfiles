#!/usr/bin/env bash

tmux new-session -s "lofi" \; \
  send-keys "youtube-dl --quiet --no-warnings 'https://www.youtube.com/watch?v=5qap5aO4i9A' -o - | mpv --vo=tct -" C-m \; \
  split-window -v \; \
  send-keys "CACA_DRIVER=ncurses cacafire" C-m \; \
  split-window -h \; \
  send-keys "cava" C-m \;
