#!/usr/bin/sh

echo -e "Backing up the entire system"
echo -e "============================"

sudo rsync -aAXvPh / --exclude={"/dev/*","/proc/*","/sys/*","/tmp/*","/run/*","/mnt/*","/media/*","/lost+found"} "/mnt/Linux/$(hostname)/Backup/$(date +%s)" || \
  echo -e "\e[0;33mPlease mount the drive first\e[0m"
